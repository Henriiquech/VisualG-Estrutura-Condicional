Algoritmo "troco_verificado"
Var
precoun, dinheirorec, troco, total : real
quantidade : inteiro

Inicio
  escreva("Pre√ßo unitario do produto: ")
  leia(precoun)
  escreva("Quantidade comprada: ")
  leia(quantidade)
  escreva("Dinheiro recebido: ")
  leia(dinheirorec)
  
  total <- precoun * quantidade
  troco <- dinheirorec - total
  
  se dinheirorec < total entao
     troco <- total - dinheirorec
           escreva("Dinheiro insuficiente. Faltam R$ ", troco:4:2)
           senao
           escreva("Troco R$ = ", troco:4:2)
     
     fimse
  
  


Fimalgoritmo
